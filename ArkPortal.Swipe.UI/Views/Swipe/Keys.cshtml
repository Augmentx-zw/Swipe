@model Blazor.UI.Shared.PrivateKey

@{
    ViewData["Title"] = "Keys";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}


<!-- Header -->
<div class="header pb-6 d-flex align-items-center" style="min-height: 500px;
        background-image: url('../assetsdash/img/theme/profile-cover.jpg');

        background-size: cover;
        background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
        <div class="row">
            <div class="col-lg-7 col-md-10">
                <h1 class="display-2 text-white">Hello @ViewBag.ShopName</h1>
                <p class="text-white mt-0 mb-5">To be able to authenicate payments, you need the following keys keep the safe and secure.</p>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-12 order-xl-1">
            <div class="card">
                <div class="card-body">
                    <form asp-action="UpdateKeys">
                        <h6 class="heading-small text-muted mb-4">Keep these safe and secure</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="ShopName">Shop Id</label>
                                        <input type="text" readonly class="form-control" asp-for="ShopId">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Private Key</label>
                                        <input asp-for="Key" readonly class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <input type="submit" value="Generate New Private Key" class="btn btn-block btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>