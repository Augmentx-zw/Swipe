@model Blazor.UI.Shared.CustomerBank

@{
    ViewData["Title"] = "Create";
}


<section class="section section-shaped section-lg">
    <div class="shape shape-style-1 bg-gradient-info">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="container-fluid pt-lg-7">
        <div class="row justify-content-center">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <h6 class="heading-small text-muted mb-4">Bank information</h6>
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="ShopName">Bank Name</label>
                                        <input type="text" class="form-control" asp-for="BankName">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label">Branch</label>
                                        <input asp-for="Branch" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="AccountNumber" class="control-label">Account Number</label>
                                        <input asp-for="AccountNumber" class="form-control" />
                                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="AccountName" class="control-label">Account Name</label>
                                        <input asp-for="AccountName" class="form-control" />
                                        <span asp-validation-for="AccountName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="AccountPhone" class="control-label">Phone Number</label>
                                        <input asp-for="AccountPhone" class="form-control" />
                                        <span asp-validation-for="AccountPhone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="AccountEmail" class="control-label">Email</label>
                                        <input asp-for="AccountEmail" class="form-control" />
                                        <span asp-validation-for="AccountEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <input type="submit" value="Save" class="btn btn-block btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
